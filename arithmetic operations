import cv2
import numpy as np
import matplotlib.pyplot as plt  
img1 = cv2.imread('image1.jpg')
img2 = cv2.imread('image2.jpg')
img1 = cv2.resize(img1, (500, 500))
img2 = cv2.resize(img2, (500, 500))
added = cv2.add(img1, img2)
subtracted = cv2.subtract(img1, img2)
multiplied = cv2.multiply(img1, img2)
divided = cv2.divide(img1, img2)
result_add = cv2.imwrite('added.jpg', added)
result_sub = cv2.imwrite('subtracted.jpg', subtracted)
result_mul = cv2.imwrite('multiplied.jpg', multiplied)
result_div = cv2.imwrite('divided.jpg', divided)
print("Addition saved:", result_add)
print("Subtraction saved:", result_sub)
print("Multiplication saved:", result_mul)
print("Division saved:", result_div)
#for google colab
from google.colab.patches import cv2_imshow
cv2_imshow(added)
cv2_imshow(subtracted)
cv2_imshow(multiplied)
cv2_imshow(divided)
added_rgb = cv2.cvtColor(added, cv2.COLOR_BGR2RGB)
subtracted_rgb = cv2.cvtColor(subtracted, cv2.COLOR_BGR2RGB)
multiplied_rgb = cv2.cvtColor(multiplied, cv2.COLOR_BGR2RGB)
divided_rgb = cv2.cvtColor(divided, cv2.COLOR_BGR2RGB)
plt.figure(figsize=(10, 10))
plt.subplot(221), plt.imshow(added_rgb), plt.title('Added')
plt.subplot(222), plt.imshow(subtracted_rgb), plt.title('Subtracted')
plt.subplot(223), plt.imshow(multiplied_rgb), plt.title('Multiplied')
plt.subplot(224), plt.imshow(divided_rgb), plt.title('Divided')
plt.tight_layout()
plt.show()
